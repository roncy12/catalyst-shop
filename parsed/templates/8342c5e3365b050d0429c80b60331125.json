{
  "components/blog/post_home": "<article class=\"blog-index\">\n    <div class=\"blog-recent_posts-figure\">\n        {{#if recent_posts.thumbnail}}\n            <figure class=\"blog-thumbnail\">\n                <a href=\"{{recent_posts.url}}\">\n                    <img src=\"{{getImage recent_posts.thumbnail 'blog_size'}}\" alt=\"{{recent_posts.thumbnail.alt}}\">\n                </a>\n            </figure>\n        {{/if}}\n    </div>\n    <div class=\"blog-recent_posts-body\">\n        <p class=\"blog-date\">{{recent_posts.date_published}}</p>\n        <div class=\"blog-right\">\n            <header class=\"blog-header\">\n                <h2 class=\"blog-title\">\n                    <a href=\"{{recent_posts.url}}\">{{recent_posts.title}}</a>\n                </h2>\n            </header>\n            <div class=\"blog-recent_posts\">\n                {{#if recent_posts.body}}\n                    {{{recent_posts.body}}}\n                {{else}}\n                    {{recent_posts.summary}}...\n                {{/if}}\n            </div>\n        </div>\n    </div>\n</article>\n"
}
