{
  "components/products/filter": "<div class=\"category-top-filter clearfix\">\n\t<form class=\"actionBar\" method=\"get\" data-sort-by>\n\t\t{{> components/category/sort-box sort=sort}}\n\t</form>\n\t<form class=\"actionBar\" method=\"get\" data-limit-by>\n\t\t{{> components/category/limit-box limit=limit}}\n\t</form>\t\n\t<div class=\"show-status\" style=\"display:none !important\">\n\t\t<p>Show {{theme_settings.categorypage_products_per_page}} products per page</p>\n\t</div>\n\t{{#if theme_settings.product_list_display_mode '===' 'grid'}}\n\t<div class=\"list-grid--switcher\">\n\t\t<a href=\"javascript:;\" class=\"list {{#if theme_settings.product_list_display_mode '===' 'list'}}active{{/if}}\">List</a>\n\t\t<a href=\"javascript:;\" class=\"grid {{#if theme_settings.product_list_display_mode '===' 'grid'}}active{{/if}}\">Grid</a>\n\t</div>\n\t{{/if}}\n</div>\n",
  "components/category/sort-box": "<fieldset class=\"form-fieldset actionBar-section\">\n    <div class=\"form-field\">\n        <label class=\"form-label\" for=\"sort\">{{lang 'common.sorter.sort_by'}}</label>\n        <select class=\"form-select form-select--small\" name=\"sort\" id=\"sort\">\n            <option value=\"featured\" {{#if sort '==' 'featured'}}selected{{/if}}>{{lang 'common.sorter.featured'}}</option>\n            <option value=\"newest\" {{#if sort '==' 'newest'}}selected{{/if}}>{{lang 'common.sorter.newest'}}</option>\n            <option value=\"bestselling\" {{#if sort '==' 'bestselling'}}selected{{/if}}>{{lang 'common.sorter.top_sellers'}}</option>\n            <option value=\"alphaasc\" {{#if sort '==' 'alphaasc'}}selected{{/if}}>{{lang 'common.sorter.alpha_asc'}}</option>\n            <option value=\"alphadesc\" {{#if sort '==' 'alphadesc'}}selected{{/if}}>{{lang 'common.sorter.alpha_desc'}}</option>\n            <option value=\"avgcustomerreview\" {{#if sort '==' 'avgcustomerreview'}}selected{{/if}}>{{lang 'common.sorter.reviews'}}</option>\n            <option value=\"priceasc\" {{#if sort '==' 'priceasc'}}selected{{/if}}>{{lang 'common.sorter.price_asc'}}</option>\n            <option value=\"pricedesc\" {{#if sort '==' 'pricedesc'}}selected{{/if}}>{{lang 'common.sorter.price_desc'}}</option>\n            {{#if result_count}}\n                <option value=\"relevance\" {{#if sort '==' 'relevance'}}selected{{/if}}>{{lang 'common.sorter.relevance'}}</option>\n            {{/if}}\n        </select>\n    </div>\n</fieldset>\n\n",
  "components/category/limit-box": "<fieldset class=\"form-fieldset actionBar-section\">\r\n    <div class=\"form-field\">\r\n        <label class=\"form-label\" for=\"limit\" style=\"text-align: right;\">Show:</label>\r\n        <select class=\"form-select form-select--small\" name=\"limit\" id=\"limit\">\r\n            <option value=\"9\">9 per page</option>\r\n            <option value=\"15\">15 per page</option>\r\n            <option value=\"21\">21 per page</option>\r\n            <option value=\"30\">30 per page</option>\r\n            <option value=\"36\">36 per page</option>\r\n        </select>\r\n    </div>\r\n</fieldset>\r\n\r\n<script>\r\n    // ------------------------------------------------------------------------\r\n    // Limit changer\r\n    // ------------------------------------------------------------------------\r\n\tlet searchParams = new URLSearchParams(window.location.search);\t\r\n\tjQuery('[data-limit-by] #limit').on('change', function(e){\r\n\t\tsearchParams.set('limit',jQuery(this).val());\r\n\t\twindow.location.search = searchParams;\r\n\t});\t\r\n\t\r\n\tif(searchParams.has('limit')){\r\n\t\tjQuery('[data-limit-by] #limit').val(searchParams.get('limit'));\r\n\t}\r\n</script>\r\n"
}
